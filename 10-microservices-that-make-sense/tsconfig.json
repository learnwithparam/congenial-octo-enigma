{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["gateway/src/**/*", "auth-service/src/**/*", "notification-service/src/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist"]
}
